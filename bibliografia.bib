@article{chen:2021,
author = {Chen, Xi},
title = {The LMARS Based Shallow-Water Dynamical Core on Generic Gnomonic Cubed-Sphere Geometry},
journal = {Journal of Advances in Modeling Earth Systems},
volume = {13},
number = {1},
pages = {e2020MS002280},
